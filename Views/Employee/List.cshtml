@{
}
@model List<employeePortal.web.Models.Entities.Employee>

<h1>List of Employees</h1>

<div class="mb-3">
    <a class="btn btn-success" asp-action="Add" asp-controller="Employee">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.empId</td>
                <td>@employee.empFullName</td>
                <td>@employee.empDept</td>
                <td>@employee.salary</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-empId="@employee.empId">Edit</a>

                </td>
            </tr>
        }
    </tbody>
</table>