@model employeePortal.web.Models.AddEmployeeViewModel

<h2>Add Employee</h2>

<form method="post">
@* empFullName *@
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="empFullName"/>
</div>

@* empDept *@
<div class="mt-3">
    <label class="form-label">Department</label>
    <input type="text" class="form-control" asp-for="empDept"/>
</div>

@* salary *@
<div class="mt-3">
    <label class="form-label">Salary</label>
    <input type="text" class="form-control" asp-for="salary"/>
</div>

@* Save Button *@
<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>