@model employeePortal.web.Models.Entities.Employee

<h2>Edit Employee</h2>

<form method="post">
    @* empId *@
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="empId" readonly/>
    </div>

    @* empFullName *@
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="empFullName" />
    </div>

    @* empDept *@
    <div class="mt-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="empDept" />
    </div>

    @* salary *@
    <div class="mt-3">
        <label class="form-label">Salary</label>
        <input type="text" class="form-control" asp-for="salary" />
    </div>

    @* Buttons *@
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="employee">Delete</button>
    </div>
</form>